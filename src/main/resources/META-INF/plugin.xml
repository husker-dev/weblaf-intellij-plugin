<idea-plugin>
    <id>com.husker.weblaf.plugin</id>
    <name>WebLaF</name>
    <vendor email="redfancoestar@gmail.com">Husker</vendor>

    <description>
        WebLaF support, such as file associations, icons and editors.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <iconProvider implementation="com.husker.weblafplugin.WebLaFIconProvider"/>
        <fileEditorProvider implementation="com.husker.weblafplugin.editors.skin.SkinFileEditorProvider"/>
    </extensions>

    <idea-version since-build="193.1784"/>

    <actions>
        <action id="weblaf.creation.skin" class="com.husker.weblafplugin.actions.NewSkinFileAction" text="WebLaF Skin" icon="MyFileIcons.DARK_SKIN">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
        <action id="weblaf.creation.style" class="com.husker.weblafplugin.actions.NewStyleFileAction" text="WebLaF Style" icon="MyFileIcons.DARK_STYLE">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>

</idea-plugin>